<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/itemChat"
        xmlns:cardview="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_marginBottom="8sp"
        android:layout_width="wrap_content"
        android:layout_height="90sp">
        <RelativeLayout
            android:id="@+id/viewDeleteRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/deleteChat">

            <ImageView
                android:id="@+id/deleteChat"
                android:layout_width="230dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_delete_chat"
                android:layout_marginEnd="-50dp"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/viewChatRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profileUser"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/single_profile_hyggs_chat" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16sp"
                    android:layout_marginEnd="16sp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/titleTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="FRANCE TOUR"
                            android:textColor="@color/white"
                            cardview:layout_constraintStart_toStartOf="parent"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:id="@+id/txtlastime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/montserrat"
                            android:gravity="end"
                            android:text="9 min"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            cardview:layout_constraintEnd_toEndOf="parent"
                            tools:ignore="MissingConstraints" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <TextView
                        android:id="@+id/txtcontent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="Charter"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txttype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="Requeriment: 1203"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            cardview:layout_constraintStart_toStartOf="parent"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:id="@+id/statusTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/montserrat"
                            android:gravity="end"
                            android:text="Open"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            cardview:layout_constraintEnd_toEndOf="parent"
                            tools:ignore="MissingConstraints" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/llnextitem"
        android:layout_marginVertical="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginVertical="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/newitemtitle"
                    android:textColor="@color/quantum_grey"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="PARIS TRIP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/newitemcontent"
                    android:textSize="12sp"
                    android:text="New Request"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/newitemlastime"
                android:textSize="10sp"
                android:layout_marginEnd="19dp"
                android:text="15 min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_rigth_continue"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
        </LinearLayout>
        <View
            android:layout_marginVertical="10dp"
            android:background="@color/quantum_grey500"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>




</LinearLayout>