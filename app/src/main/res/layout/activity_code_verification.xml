<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:paddingEnd="-450dp"
        android:src="@drawable/single_background_login" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_margin="16sp"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="16sp"
        android:layout_marginBottom="16sp"
        android:background="@drawable/vector_background_login_register"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <ImageView
            android:layout_width="150sp"
            android:layout_height="120sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:background="@drawable/single_ic_black_logo" />

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:text="Enter the CODE that you receive in this number"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:weightSum="10"
            android:layout_marginTop="10sp">

            <TextView
                android:text="+ ** ******"
                android:layout_width="0sp"
                android:layout_weight="6.5"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginStart="10sp"
                android:src="@drawable/ic_user"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/textViewPhone"
                android:layout_width="0sp"
                android:layout_weight="3.5"
                android:layout_height="50sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10sp"
                android:background="@drawable/ic_background_edit_text_input_short"
                android:ellipsize="none"
                android:hint="User"
                android:text="4569"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="28sp"
                android:inputType="textEmailAddress"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/colorHint"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_marginTop="10sp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="50sp"
                android:orientation="horizontal"
                android:background="@drawable/ic_background_edit_text_input_mini">

                <EditText
                    android:id="@+id/numberOne"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:elevation="10sp"
                    android:ellipsize="none"
                    android:inputType="number"
                    android:maxLength="1"

                    android:shadowColor="@color/gray"
                    android:textColorHighlight="@color/gray"

                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorHint"
                    android:textStyle="bold"
                    android:cursorVisible="false"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="10sp"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="50sp"
                android:orientation="horizontal"
                android:background="@drawable/ic_background_edit_text_input_mini">

                <EditText
                    android:id="@+id/numberTwo"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:ellipsize="none"
                    android:elevation="10sp"
                    android:inputType="number"
                    android:scrollHorizontally="true"


                    android:shadowColor="@color/gray"
                    android:textColorHighlight="@color/gray"


                    android:maxLength="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorHint"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:cursorVisible="false"
                    android:textAlignment="center"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="50sp"
                android:layout_marginStart="10sp"
                android:orientation="horizontal"
                android:background="@drawable/ic_background_edit_text_input_mini">

                <EditText
                    android:id="@+id/numberThree"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:elevation="10sp"
                    android:ellipsize="none"
                    android:inputType="number"
                    android:maxLength="1"

                    android:shadowColor="@color/gray"
                    android:textColorHighlight="@color/gray"

                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorHint"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:cursorVisible="false"
                    android:textAlignment="center"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="50sp"
                android:layout_marginStart="10sp"
                android:orientation="horizontal"
                android:background="@drawable/ic_background_edit_text_input_mini">

                <EditText
                    android:id="@+id/numberFour"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:elevation="10sp"
                    android:ellipsize="none"
                    android:inputType="number"
                    android:maxLength="1"

                    android:shadowColor="@color/gray"
                    android:textColorHighlight="@color/gray"

                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorHint"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:cursorVisible="false"
                    android:textAlignment="center"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="50sp"
                android:layout_marginStart="10sp"
                android:orientation="horizontal"
                android:background="@drawable/ic_background_edit_text_input_mini">

                <EditText
                    android:id="@+id/numberFive"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:elevation="10sp"
                    android:ellipsize="none"
                    android:inputType="number"
                    android:maxLength="1"

                    android:shadowColor="@color/gray"
                    android:textColorHighlight="@color/gray"

                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorHint"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:cursorVisible="false"
                    android:textAlignment="center"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="50sp"
                android:layout_marginStart="10sp"
                android:orientation="horizontal"
                android:background="@drawable/ic_background_edit_text_input_mini">

                <EditText
                    android:id="@+id/numberSix"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:elevation="10sp"
                    android:ellipsize="none"
                    android:inputType="number"
                    android:maxLength="1"

                    android:shadowColor="@color/gray"
                    android:textColorHighlight="@color/gray"

                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorHint"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:cursorVisible="false"
                    android:textAlignment="center"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>



        </LinearLayout>

        <Button
            android:id="@+id/registerButtonCodeVerification"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="40sp"
            android:background="@drawable/vector_selector_all_buttons"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />


    </LinearLayout>

</RelativeLayout>