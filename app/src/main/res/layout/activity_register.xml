                android:layout_height="50sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10sp"
                android:background="@android:color/transparent"
                android:ellipsize="none"
                android:hint="First Name"
                android:inputType="text"
                android:paddingStart="10dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/colorHint"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/ic_background_edit_text_input">

            <EditText
                android:id="@+id/lastNameRegister"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10sp"
                android:background="@android:color/transparent"
                android:ellipsize="none"
                android:hint="Last Name"
                android:inputType="text"
                android:paddingStart="10dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/colorHint"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80sp"
                android:layout_height="50sp"
                android:background="@drawable/ic_background_edit_text_input_short"
                android:orientation="horizontal">

                <AutoCompleteTextView
                    android:id="@+id/codePhoneRegister"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="10sp"
                    android:background="@android:color/transparent"

                    android:clickable="true"
                    android:editable="false"
                    android:elevation="10sp"
                    android:ellipsize="none"
                    android:focusable="false"

                    android:hint="+444"
                    android:inputType="number"
                    android:paddingStart="5dp"
                    android:paddingEnd="5sp"

                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorHint"
                    android:textSize="16sp"
                    tools:ignore="RtlSymmetry" />

                <ImageView
                    android:layout_width="35sp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="-35sp"
                    android:src="@drawable/single_desplegable" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginStart="16sp"
                android:background="@drawable/ic_background_edit_text_input"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/phoneRegister"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="10sp"
                    android:background="@android:color/transparent"
                    android:ellipsize="none"
                    android:hint="Phone"
                    android:inputType="phone"
                    android:paddingStart="10dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorHint"
                    android:textSize="16sp"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/ic_background_edit_text_input">

            <EditText
