<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@android:color/transparent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@android:color/transparent"
        android:id="@+id/viewre"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="2dp"/>
        <LinearLayout
            android:layout_marginVertical="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:maxWidth="150dp"
                android:padding="10dp"
                android:background="@drawable/trazado_1562"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:maxWidth="150dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/black"
                    android:id="@+id/tvtitlechatre"
                    android:text="Hi Timo, what do you need today?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/contentre"
                    android:layout_marginVertical="5dp"
                    android:layout_below="@+id/tvtitlechatre"
                    android:maxWidth="150dp"
                    android:textColor="@color/quantum_grey600"
                    android:text="1️⃣ ng service info.\n3️⃣ I only need info."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginEnd="10dp"
                android:textColor="@color/quantum_white_100"
                android:layout_gravity="bottom|end"
                android:textSize="8sp"
                android:text="Hyggs 09:27 a.m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="95dp"
            android:src="@drawable/single_profile_hyggs_chat"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
    </LinearLayout>
    <LinearLayout
        android:background="@android:color/transparent"
        android:id="@+id/viewem"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_circle_profile_image"
            android:layout_width="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_marginVertical="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:padding="10dp"
                android:background="@drawable/trazado_1561"
                android:layout_marginStart="10dp"
                android:minWidth="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:maxWidth="150dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/black"
                    android:id="@+id/tvtitlechatem"
                    android:text="2"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvcontentem"
                    android:visibility="gone"
                    android:layout_below="@+id/tvtitlechatem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/quantum_white_100"
                android:layout_marginVertical="5dp"
                android:textSize="8sp"
                android:layout_gravity="bottom|end"
                android:text="Hyggs 09:27 a.m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"/>
    </LinearLayout>
</LinearLayout>