<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>

        <item name="android:homeAsUpIndicator">@color/black</item>

<!--        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>-->


    </style>



    <style name="MyCustomTabLayoutAppearance" parent="android:Widget">
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabIndicatorHeight">60dp</item>
        <item name="android:selectableItemBackground">@color/white</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>

    </style>


    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>


<!--        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>-->

    </style>

    <style name="BrinksTextReadOnly" parent="@android:style/Widget.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingLeft">2dp</item>
    </style>

    <style name="AppThemeLight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <!--item name="fontPath">fonts/GothamRnd-Medium.otf</item-->
    </style>

    <style name="AppThemeFullScreen" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

